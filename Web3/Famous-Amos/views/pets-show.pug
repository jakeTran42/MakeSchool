extends layout

block content
    .row
        .col-sm-4
            img(src=pet.picUrlSq).img-fluid
        .col-sm-8
            h1=pet.name
            p=pet.species
            .text-right
              a.btn.btn-primary(href="/pets/" + pet.id + "/purchase" role='button') Buy #{pet.name} Now!
            p Born on #{pet.birthday}
            p=pet.description
            .text-right
                a(href="/pets/" + pet.id + "/edit").btn-link Edit
